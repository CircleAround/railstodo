<table>
  <thead>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>状態</th>
    <th>優先度</th>
    <th>カテゴリ</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% todos.each do |todo| %>
      <tr>
        <td><%= link_to todo do %><%= todo.title %><% end %></td>
        <td><%= todo.body %></td>
        <td><%= todo.status %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.category.try(:name) %></td>
        <td><%= link_to '完了', status_todo_path(todo, status: 1), method: :patch %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: '本当にいいですか？' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate todos %>
